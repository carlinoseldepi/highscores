
<h2><%= I18n.t('top_players.title') %></h2>
<div class="divider"></div>

<div class="row">
    <div class="col s12 m6">
        <h3><%= I18n.t('top_players.general', number: 10) %></h3>
        <div class="row">
            <div class="col s12 m12">
                <div class="card green lighten-4 hoverable">
                    <div class="card-content">
                        <ul>
                            <% @top_players_general.each_with_index do |player_info, index| %>
                                <li class="flow-text"><%= (index+1) %>. <%= player_info[0] %>: <strong><%= player_info[1] %></strong> <%= I18n.t('top_players.points') %></li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col s12 m6">
        <h3><%= I18n.t('top_players.by_game', number: 5) %></h3>

        <% @top_players_by_game.each do |game_name, players| %>
            <div class="row">
                <div class="col s12 m12">
                    <div class="card light-blue lighten-4 hoverable">
                        <div class="card-content">
                            <span class="card-title"><%= game_name %></span>
                            <div class="divider"></div>
                            <ul>
                                <% players.each do |player| %>
                                    <li><%= player.player_email %>: <strong><%= player.total_score %></strong> <%= I18n.t('top_players.points') %></li>
                                <% end %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>