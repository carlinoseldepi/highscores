
<h2>Top Players</h2>

<div class="row">
    <div class="col s12 m6">
        <h3>General Ranking</h3>
        <ul>
            <% @top_players_general.each do |player_info| %>
                <li><%= player_info[0] %>: <strong><%= player_info[1] %></strong></li>
            <% end %>
        </ul>
    </div>

    <div class="col s12 m6">
        <h3>Ranking by Game</h3>

        <% @top_players_by_game.each do |game_name, players| %>
            <div class="row">
                <div class="col s12 m12">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title"><%= game_name %></span>
                            <ul>
                                <% players.each do |player| %>
                                    <li><%= player.player_email %>: <strong><%= player.total_score %></strong></li>
                                <% end %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>